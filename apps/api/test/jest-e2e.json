{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/shared$": "<rootDir>/../../packages/shared/src"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"]
}
